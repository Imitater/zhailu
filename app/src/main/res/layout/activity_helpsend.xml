<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mouqukeji.hmdeer.ui.widget.MyActionBar
            android:id="@+id/helpsend_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@mipmap/mipmap_line"
                        android:elevation="2dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/shape_circle_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="寄件人信息"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/helpsend_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/helpsend_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="17dp"
                                android:layout_toLeftOf="@id/helpsend_next"
                                android:text="点击填写寄件人信息"
                                android:textColor="@color/order_gray"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/helpsend_next"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="25dp"
                                android:background="@mipmap/mipmap_next" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/helpsend_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                    <include layout="@layout/line" />

                    <include layout="@layout/helptake_address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/yellow"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:text="收件人信息"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:text="姓名:" />

                        <EditText
                            android:id="@+id/send_order_name"
                            style="@style/HelpSendEditBtStyle"
                            android:layout_marginLeft="50dp"
                            android:hint="请输入姓名" />
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="60dp"
                            android:text="手机号码:" />

                        <EditText
                            android:id="@+id/send_order_number"
                            style="@style/HelpSendEditBtStyle"
                            android:hint="请输入手机号码"
                            android:numeric="integer" />
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <LinearLayout
                        android:id="@+id/send_order_address_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:text="地区:" />

                        <TextView
                            android:id="@+id/send_order_address"
                            style="@style/HelpSendTvGrayBtStyle"
                            android:text="请选择地区" />

                        <ImageView style="@style/HelpSendNextIvStyle"
                            android:id="@+id/helpsend_address_iv"/>
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="60dp"
                            android:text="详细地址:" />

                        <EditText
                            android:id="@+id/send_order_address_info"
                            style="@style/HelpSendEditBtStyle"
                            android:hint="请输入详细地址" />
                    </LinearLayout>

                    <include layout="@layout/line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/yellow"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:text="快件信息"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="90dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/helpsend_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="60dp"
                            android:text="物品类型:" />

                        <TextView
                            android:id="@+id/helpsend_item_tv"
                            style="@style/HelpSendTvGrayBtStyle"
                            android:text="请选择物品类型" />

                        <ImageView style="@style/HelpSendNextIvStyle" />
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <LinearLayout
                        android:id="@+id/helpsend_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="60dp"
                            android:text="快递服务:" />

                        <EditText
                            android:id="@+id/helpsend_location_tv"
                            style="@style/HelpSendTvGrayBtStyle"
                            android:background="@android:color/transparent"
                            android:hint="请输入快递服务地址"
                            android:textColorHint="@color/buy_youhui_gray" />

                        <ImageView style="@style/HelpSendNextIvStyle" />
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <LinearLayout
                        android:id="@+id/helpsend_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="60dp"
                            android:text="付款方式:" />

                        <TextView
                            android:id="@+id/helpsend_pay_tv"
                            style="@style/HelpSendTvGrayBtStyle"
                            android:text="付款方式" />

                        <ImageView style="@style/HelpSendNextIvStyle" />
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <LinearLayout
                        android:id="@+id/helpsend_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="60dp"
                            android:text="揽件时间:" />

                        <TextView
                            android:id="@+id/helpsend_time_tv"
                            style="@style/HelpSendTvGrayBtStyle"
                            android:text="立即取件"
                            android:textColor="@color/black" />

                        <ImageView style="@style/HelpSendNextIvStyle" />
                    </LinearLayout>

                    <include layout="@layout/line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv"
                            style="@style/HelpSendTextBtStyle"
                            android:layout_width="30dp"
                            android:gravity="top"
                            android:text="备注:" />

                        <EditText
                            android:id="@+id/send_order_beizhu"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tv"
                            android:background="@android:color/transparent"
                            android:gravity="top"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="订单里程:"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/helpsend_long"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="0公里"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="起步价（含1公里）"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/helpsend_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="0元"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="超出里程"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/helpsend_pass_long_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（0公里）"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/helpsend_pass_long"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="0元"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="物品重量"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/helpsend_pass_weight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（超出0kg）"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/helpsend_pass_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:text="0元"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/helpsend_huiyuan"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_marginBottom="48dp"
                android:background="@mipmap/mipmap_huiyuan" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/mipmap_money_list"
                android:elevation="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="配送费："
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/send_order_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0"
                        android:textColor="@color/red"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/helpsend_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="下单"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></FrameLayout>
</RelativeLayout>