<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FCFCFC"
    android:layout_height="match_parent">
    <com.mouqukeji.hmdeer.ui.widget.MyActionBar
        android:id="@+id/evaluation_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
     <TextView
         android:layout_marginTop="26dp"
         android:layout_gravity="center"
         android:textColor="@color/black"
         android:textSize="16sp"
         android:text="评价本次服务"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
    <com.mouqukeji.hmdeer.ui.widget.StarBar
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:id="@+id/starBar"
        android:layout_below="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        ratingbar:starEmpty="@drawable/star_empty"
        ratingbar:starFill="@drawable/star_full"
        ratingbar:starDistance="5dp"
        ratingbar:starCount="5"
        ratingbar:starSize="30dp"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:textSize="10sp"
        android:text="您对本次服务还满意吗"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/evaluation_et"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="top|center"
        android:textSize="12sp"
        android:textColorHint="@color/evaluation_gray"
        android:hint="您的意见很重要呦，来点评一下吧..."
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:background="@color/order_gray"
        android:layout_width="match_parent"
        android:layout_height="116dp" />
        <Button
            android:id="@+id/evaluation_bt"
            android:textColor="@color/white"
            android:background="@drawable/button_evaluation_shape"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:textSize="15sp"
            android:text="匿名提交"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>