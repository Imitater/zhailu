<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentRight="true"
            android:background="@mipmap/mipmap_dialog_close"
            android:id="@+id/dialog_procress_close"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <View
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dialog_procress_close"
             android:layout_width="2dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/dialog_procress_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/adapter_dialog_procress_recyclerview"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>