<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mouqukeji.hmdeer.ui.widget.MyActionBar
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/action_bar"
        android:layout_height="wrap_content"></com.mouqukeji.hmdeer.ui.widget.MyActionBar>

    <LinearLayout
        android:id="@+id/ll_cancel"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:background="@drawable/icon_cancel_02"
            android:id="@+id/imageButton"
            android:layout_width="13dp"
            android:layout_height="24dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1833" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:hint="请输入手机号"
        android:textColor="#000000"
        android:textColorHint="#B7B7B7"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintVertical_bias="0.305" />


    <View
        android:id="@+id/view6"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        app:layout_constraintHorizontal_bias="0.55"/>


    <Button
        android:id="@+id/button_next"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:background="@drawable/button_shape006_sign_up"
        android:text="下一步"
        android:textColor="#FEFEFE"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />





</android.support.constraint.ConstraintLayout>