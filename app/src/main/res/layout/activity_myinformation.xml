<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/actionbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/info_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                app:civ_border_color="@android:color/transparent"
                app:civ_border_width="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:text="修改头像"
                android:textSize="12sp" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="昵称"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/info_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="29dp"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:text="何儿饭"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:id="@+id/info_sex_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="性别"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/info_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="女"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@mipmap/mipmap_b_next" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:id="@+id/info_age_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="年龄"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/info_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:singleLine="true"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@mipmap/mipmap_b_next" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:id="@+id/info_school_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="所在学校"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/info_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="请选择所在学校"
                android:textColor="@color/info_gray"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@mipmap/mipmap_b_next" />
        </LinearLayout>

        <include layout="@layout/line" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/info_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/L8_progressbar2"
            android:layout_below="@+id/L8_progressbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/progress_anim"
            />

    </LinearLayout>
</RelativeLayout>