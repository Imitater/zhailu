<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/buttom_dialog_background"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_dissmiss"
            android:paddingTop="10dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/dialog_gray"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="请选择物品类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_enter"
            android:paddingRight="32dp"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingLeft="32dp"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
     <View
         android:background="@color/order_gray"
         android:layout_width="match_parent"
         android:layout_height="1dp"></View>
    <TextView
        android:layout_marginTop="4dp"
        android:textColor="@color/dialog_red"
        android:layout_gravity="center"
        android:textSize="8sp"
        android:text="注：贵重物品请不要让他人代领"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="物品描述"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <android.support.v7.widget.RecyclerView
       android:id="@+id/dialog_items_recyclerview"
        android:layout_marginTop="12dp"
       android:layout_marginLeft="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="物品重量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/dialog_items_prompt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:textSize="9sp"
        android:text="重量超过1kg，每增加1kg配送费加1元"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="9sp"
            android:textColor="@color/dialog_items_prompt_tv"
            android:text="小于1kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_seekbar_progress"
            android:textColor="@color/dialog_seek_prompt_tv"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:text="小于1kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textSize="9sp"
            android:textColor="@color/dialog_items_prompt_tv"
            android:text="5kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/dialog_seekbar"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isb_max="5"
        app:isb_min="1"
        app:isb_progress="0"
        app:isb_seek_smoothly="true"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_texts_size="15sp"
        app:isb_thumb_size="20dp"
        app:isb_indicator_color="@color/dialog_seek_prompt_tv"
        app:isb_track_progress_color="@color/dialog_seek_prompt_tv"
        app:isb_thumb_color="@color/dialog_seek_prompt_tv"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_indicator_text_color="@color/white"
        app:isb_indicator_text_size="18sp"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_size="4dp"
        app:isb_only_thumb_draggable="false"/>
</LinearLayout>