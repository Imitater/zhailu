<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adapter_type"
            android:textColor="@color/black"
            android:text="帮忙买 下单 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adapter_time"
            android:textSize="10sp"
            android:textColor="#BBBBBB"
            android:text="2019-02-10   11:50:20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_money"
        android:layout_marginRight="27dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="+1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>
    <View
        android:id="@+id/adapter_line"
        android:background="@color/jife_line"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"></View>
</LinearLayout>