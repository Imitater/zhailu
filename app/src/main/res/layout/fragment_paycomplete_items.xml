<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/default_gray"
    android:layout_height="match_parent">
    <include layout="@layout/actionbar"></include>
    <ImageView
        android:layout_marginTop="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/icon_ing_ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:text="支付成功"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/paycomplete_bt_left"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:text="返回首页"
            android:background="@drawable/button_pay_shape_left"
            android:layout_marginLeft="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/paycomplete_bt_right"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="去评价"
            android:background="@drawable/button_pay_shape_right"
            android:layout_marginRight="50dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>